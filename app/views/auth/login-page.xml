<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="onNavigatingTo" class="bg-gray-100">
    <StackLayout class="p-4">
        <Label text="Welcome to Boomerang" class="text-3xl font-bold text-center mb-8" />
        
        <StackLayout class="form">
            <Label text="Email" class="text-sm text-gray-600" />
            <TextField text="{{ email }}" keyboardType="email" autocorrect="false" autocapitalizationType="none" class="input p-2 rounded-lg border border-gray-300 mb-4" />
            
            <Label text="Password" class="text-sm text-gray-600" />
            <TextField text="{{ password }}" secure="true" class="input p-2 rounded-lg border border-gray-300 mb-6" />
            
            <Button text="Sign In" tap="{{ onLogin }}" class="btn btn-primary p-3 rounded-lg" />
        </StackLayout>
    </StackLayout>
</Page>